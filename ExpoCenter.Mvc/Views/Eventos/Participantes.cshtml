@model ExpoCenter.Mvc.Models.EventoViewModel

@{
    ViewData["Title"] = "Participantes";
}

<h1>Participantes</h1>

<h4>Evento</h4>
<hr />

<form asp-action="Participantes">
    <input type="hidden" asp-for="Id" />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Local)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Local)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
        </dl>
    </div>
    <div>
        <partial name="~/Views/Participantes/ParticipantesGridPartial.cshtml" model="Model.Participantes" />
    </div>
    <div>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Voltar</a>
</div>
